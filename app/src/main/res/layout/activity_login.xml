<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="softweb.pe.testpp.LoginActivity"
    >

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:padding="20dp"
        android:paddingRight="100dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtContrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUsuario"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/amarilloQuinua"
            android:text="INGRESAR"
            android:textColor="@color/blancoQuinua"
            android:layout_below="@+id/lblMensaje"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="btnIngresarClick"/>

        <TextView
            android:id="@+id/lblMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtContrasenia"
             />

        <TextView
            android:id="@+id/lblReenvio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reenvío de contraseña"
            android:layout_below="@+id/btnIngresar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="lblReenvioClick"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
